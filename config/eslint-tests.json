{
    "env": {
        "node": true,
        "mocha": true
    },
    "rules": {
        "block-scoped-var": 2,
        "brace-style": [2, "1tbs"],
        "camelcase": 2,
        "comma-spacing": [2, { "before": false, "after": true } ],
        "comma-style": [ 2, "last" ],
        "curly": [ 2, "all" ],
        "dot-notation": [ 2, { "allowKeywords": true } ],
        "eqeqeq": [ 2, "allow-null" ],
        "guard-for-in": 0,
        "indent": [ 2, 4 ],
        "max-len": [ 2, 120, 4 ],
        "new-cap": 2,
        "newline-after-var": [ 1, "always" ],
        "no-alert": 2,
        "no-bitwise": 2,
        "no-caller": 2,
        "no-cond-assign": [ 2, "except-parens" ],
        "no-console": 2,
        "no-debugger": 2,
        "no-empty": 2,
        "no-extend-native": 2,
        "no-irregular-whitespace": 2,
        "no-iterator": 2,
        "no-loop-func": 2,
        "no-multiple-empty-lines": [2, {"max": 1}],
        "no-multi-str": 2,
        "no-new": 2,
        "no-proto": 2,
        "no-script-url": 2,
        "no-sequences": 2,
        "no-shadow": 2,
        "no-trailing-spaces": 2,
        "no-undef": 2,
        "no-unused-vars": 2,
        "no-with": 2,
        "one-var": [2, "never"],
        "quotes": [ 2, "single" ],
        "semi": [2, "always"],
        "keyword-spacing": 2,
        "space-before-function-paren": [ 2, { "anonymous": "always", "named": "never" } ],
        "strict": [2, "function"],
        "valid-typeof": 2,
        "wrap-iife": [ 2, "inside" ]
    },
    "globals": {
        "expect": true
    }
}
